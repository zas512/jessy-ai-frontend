<svg width="400" height="600" viewBox="0 0 400 600" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="400" height="600" fill="#F5F5F5"/>
  
  <!-- Healthcare professional silhouette -->
  <circle cx="200" cy="150" r="80" fill="#90EE90"/> <!-- Light green for scrubs -->
  
  <!-- Body -->
  <rect x="140" y="230" width="120" height="200" fill="#90EE90"/>
  
  <!-- Arms -->
  <rect x="100" y="250" width="40" height="120" fill="#90EE90"/>
  <rect x="260" y="250" width="40" height="120" fill="#90EE90"/>
  
  <!-- Stethoscope -->
  <circle cx="180" cy="280" r="15" fill="#C0C0C0" stroke="#808080" stroke-width="2"/>
  <circle cx="220" cy="280" r="15" fill="#C0C0C0" stroke="#808080" stroke-width="2"/>
  <path d="M180 280 Q200 300 220 280" stroke="#808080" stroke-width="3" fill="none"/>
  
  <!-- Ring on left hand -->
  <circle cx="120" cy="350" r="8" fill="#FFD700"/>
  
  <!-- Purple section at bottom -->
  <rect x="0" y="500" width="400" height="100" fill="#8B5CF6"/>
  
  <!-- Text in purple section -->
  <text x="200" y="530" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="white">
    Daily Health monitoring Assistance for Older adults
  </text>
  
  <!-- Feature list -->
  <g fill="white" font-family="Arial, sans-serif" font-size="12">
    <text x="50" y="550">Health Monitoring</text>
    <text x="50" y="565">Medication Reminder</text>
    <text x="50" y="580">Emergency Support</text>
    <text x="50" y="595">Voice Interactions</text>
  </g>
  
  <!-- Vertical lines for bullet points -->
  <line x1="40" y1="545" x2="40" y2="555" stroke="white" stroke-width="1"/>
  <line x1="40" y1="560" x2="40" y2="570" stroke="white" stroke-width="1"/>
  <line x1="40" y1="575" x2="40" y2="585" stroke="white" stroke-width="1"/>
  <line x1="40" y1="590" x2="40" y2="600" stroke="white" stroke-width="1"/>
</svg>
